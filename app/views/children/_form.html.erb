<%= form_with model: @child, local: true, html: { multipart: true, class: "card" } do |f| %>
  <% if @child.errors.any? %>
    <div class="flash alert" style="margin-bottom:1rem;">
      <strong><%= @child.errors.count %>件のエラーがあります:</strong>
      <ul style="margin:.5rem 0 0 1rem;">
        <% @child.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label class="label" for="child_name">お名前（必須）</label>
    <%= f.text_field :name, class: "input", placeholder: "例）よしえ" %>
  </div>

  <div class="field">
    <label class="label" for="child_birthday">お誕生日（必須）</label>
    <%= f.date_field :birthday, class: "input" %>
  </div>

  <div class="field">
    <label class="label" for="child_photo">写真（任意）</label>
    <%= f.file_field :photo, accept: "image/*", class: "input" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-primary" %>
    <%= link_to "一覧へ戻る", children_path, class: "btn btn-secondary" %>
  </div>
<% end %>